<% include ../header.ejs %>

  <!-- Upload -->
  <section id="upload">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <h1>Update Produk Anda</h1>

          <form method="post" action="/update">
            <div class="form-group">
              <label>Category</label>
              <input name="category" type="text" class="form-control" aria-label="Item Category" value="<%= data[0].category %>">
            </div>

            <div class="form-group">
              <label>Brand</label>
              <input name="brand" type="text" class="form-control" aria-label="Item Brand" value="<%= data[0].brand %>">
            </div>

            <div class="form-group">
              <label>Name</label>
              <input name="name" type="text" class="form-control" aria-label="Item Name" value="<%= data[0].name %>">
            </div>

            <div class="form-group">
              <label>Price</label>
              <input name="price" type="text" class="form-control" aria-label="Price (in Rupiah)" value="<%= data[0].price %>">
            </div>

            <div class="form-group">
              <label>Stock</label>
              <input name="stock" type="text" class="form-control" aria-label="Stock" value="<%= data[0].stock %>">
            </div>

            <input type="hidden" name="id" value="<%= data[0].id %>">
            <button type="submit" class="btn btn-primary">Upload Product</button>
          </form>
        </div>
      </div>
    </div>
  </section>

<% include ../footer.ejs %>
